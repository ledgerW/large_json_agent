run = ["python", "main.py"]
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[[ports]]
localPort = 8000
externalPort = 80

[[ports]]
localPort = 2024
externalPort = 2024

[env]
PYTHONPATH = "${PYTHONPATH}:${REPL_HOME}"

[[runners]]
name = "FastAPI Server"
language = "python3"
onStart = ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]

[[runners]]
name = "LangGraph Dev"
language = "python3"
onStart = ["langgraph", "dev"]